<resources>

    <style name="ASW" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryLight</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">14sp</item>
        <item name="actionBarStyle">@style/ASW.ActionBar</item>
    </style>

    <style name="ASW.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="actionButtonStyle">@color/colorPrimaryDark</item>
    </style>

    <style name="ASW.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ASW.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ASW.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="viewPagerTitle" parent="ASW">
        <item name="android:textAppearance">@style/viewPagerTitleText</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">1dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/colorAccentDark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="viewPagerTitleText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttonFlat" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="button" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="label" parent="ASW">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="textRemindFrag" parent="ASW">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:capitalize">sentences</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
